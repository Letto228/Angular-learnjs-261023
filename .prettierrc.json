{
    "trailingComma": "all",
    "useTabs": false,
    "tabWidth": 4,
    "printWidth": 120,
    "singleQuote": false,
    "semi": true,
    "bracketSpacing": true,
    "plugins": ["prettier-plugin-organize-attributes"],
    "attributeGroups": [
        "$ANGULAR_STRUCTURAL_DIRECTIVE",
        "$ANGULAR_ELEMENT_REF",
        "$ID",
        "$DEFAULT",
        "$CLASS",
        "$ANGULAR_ANIMATION",
        "$ANGULAR_ANIMATION_INPUT",
        "$ANGULAR_INPUT",
        "$ANGULAR_TWO_WAY_BINDING",
        "$ANGULAR_OUTPUT"
    ]
}
